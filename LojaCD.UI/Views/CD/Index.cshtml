@model LojaCD.Services.ViewModels.CDScomFiltroViewModel

@{
    ViewData["Title"] = "Gerenciamento de CDs";
}
<style>
    .modal-lg {
        max-width: 80%;
    }
</style>
<div>
    <h2>@ViewData["Title"]</h2>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
               

                <form asp-controller="CD" asp-action="Filtrar" method="get">

                    <div class="form-group">
                        <label asp-for="Filtro.TituloCD" class="col-md-6 control-label"></label>
                        <input asp-for="Filtro.TituloCD" class="form-control" />
                        <span asp-validation-for="Filtro.TituloCD" class="text-danger"></span>
                    </div>
                   
                    <div class="form-group">
                        <label asp-for="Filtro.ArtistaID" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <select asp-for="Filtro.ArtistaID" class="form-select" asp-items="ViewBag.ArtistaId"> </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Filtro.GeneroMusicalID" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <select asp-for="Filtro.GeneroMusicalID" class="form-select" asp-items="ViewBag.GeneroMusicalID"> </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Filtro.NomeMusica" class="control-label"></label>
                        <input asp-for="Filtro.NomeMusica" class="form-control" />
                        <span asp-validation-for="Filtro.NomeMusica" class="text-danger"></span>
                    </div>

                    <input type="submit" value="Filtrar" class="btn btn-primary" />
                    <input type="reset" value="Limpar" class="btn btn-warning" />

                </form>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="Create" class="btn btn-primary">
                    <span title="Novo CD" class="fas fa-plus"></span> Novo CD
                </a>
            </div>
        </div>
    </div>
</div>
<br />
<div class="panel panel-default">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Titulo
                </th>
                <th>
                    Artista
                </th>
                <th>
                    Genero Musical
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CDSViewModel)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <th>
                        @Html.DisplayFor(modelItem => item.Artista.Nome)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => item.GeneroMusical.Nome)
                    </th>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" title="Editar" class="btn btn-warning">
                            <span class="fas fa-edit">Editar</span>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" title="Deletar" class="btn btn-danger">
                            <span class="fas fa-trash-alt">Excluir</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
