@model LojaCD.Services.ViewModels.MusicaViewModel

<h3>Exluir Musica</h3>

<h4>Confirma a exclusão desta musica?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>

    <form asp-action="DeleteMusica">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="DeleteMusica" class="btn btn-danger" /> |
    </form>
    <form asp-controller="CD" asp-action="VoltarParaCD" method="get">
        <input type="hidden" asp-for="CDId" />
        <input type="submit" value="Voltar" class="btn btn-primary" /> |
    </form>
</div>
